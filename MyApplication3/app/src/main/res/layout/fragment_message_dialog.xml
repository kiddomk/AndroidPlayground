<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.junseki.myapplication3.DialogMessageFragment">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/fragment_message_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_display_message"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="#333333"
        android:fontFamily="@string/font_bold"
        />

    <!-- Dialog Title Ruler -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#333333"/>

    <!-- Dialog Message Content -->
    <TextView
        android:id="@+id/fragment_message_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="fasdfsa"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:fontFamily="@string/font_black"
        />

    <!-- OK/confirmation button -->
    <Button
        android:id="@+id/fragment_message_dialog_button"
        android:background="#333333"
        android:fontFamily="@string/font_bold"
        android:textColor="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="OK"/>


</LinearLayout>
